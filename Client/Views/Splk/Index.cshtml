@{
    Layout = "LayoutOvertime";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List Surat Pengajuan Lembur Kerja</h6>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#insertModal" onclick="InsertEmployee()">INSERT</button>
    </div>
    <div class="card-body">
        <div class="table-responsive tablediv">
            <table id="table_employee" class="table table-hover table-bordered" width="100%" cellspacing="0">
                <thead class="thead-light font-weight-bold text-primary">
                    <tr class="">
                        <td>No</td>
                        <td>NIK</td>
                        <td>Jenis Lembur</td>
                        <td>Tanggal Mulai</td>
                        <td>Jam Mulai</td>
                        <td>Jam Selesai</td>
                        <td>Description</td>
                        <td>Status</td>
                        <td>Bukti</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>

</div>


<div class="modal fade insertModal" id="insertModal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Insert Form SPLK</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formSplk">
                    <div class="mb-1">
                        <label for="nik" class="col-form-label">NIK:</label>
                        <input type="text" class="form-control" id="nik" name="nik">
                    </div>
                    <div class="mb-1">
                        <label for="jenisLembur">Jenis Lembur</label>
                        <select id="jenislembur" class="form-control" required>
                        <option value="99" selected>Select Jenis</option>
                        <option value="0">Kerja</option>
                        <option value="1">Libur</option>
                        </select>
                    </div>
                    <div class="mb-1">
                        <label for="recipient-name" class="col-form-label">Tanggal Mulai:</label>
                        <input type="Date" class="form-control" id="tglmulai" name="tglmulai">

                    </div>
                    <div class="mb-1">
                        <label for="recipient-name" class="col-form-label">Jam Mulai:</label>
                        <input type="time" class="form-control" id="jammulai" name="jammulai">

                    </div>
                    <div class="mb-1">
                        <label for="recipient-name" class="col-form-label">Jam Selesai:</label>
                        <input type="time" class="form-control" id="jamselesai" name="jamselesai">

                    </div>
                    <div class="mb-1">
                        <label for="recipient-name" class="col-form-label">Description:</label>
                        <textarea class="form-control" id="deskripsi" name="deskripsi" rows="3"></textarea>
                    </div>
                    <div class="mb-1">
                        <label for="recipient-name" class="col-form-label">Bukti:</label>
                        <input type="file" class="form-control" id="buktifile" name="buktifile">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" id="btnSaveSplk" class="btn btn-primary" >Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
